{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "log:default",
    "fs:default",
    "fs:allow-home-read-recursive",
    "fs:allow-home-write-recursive",
    "fs:allow-home-read",
    "fs:allow-home-write",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/*"
        }
      ]
    },
    "store:default"
  ]
}